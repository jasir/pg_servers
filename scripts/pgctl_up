#!/bin/bash

# pgctl_up - PostgreSQL Multi-Version Setup Script
# KompletnÃ­ nastavenÃ­ PostgreSQL multi-verze prostÅ™edÃ­

set -e

PG_SERVERS_ROOT="$HOME/pg_servers"
DOCKER_DIR="$PG_SERVERS_ROOT/docker"
COMPOSE_FILE="$DOCKER_DIR/docker-compose.yml"
ENV_FILE="$PG_SERVERS_ROOT/.env"

# Barvy pro vÃ½stup
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Funkce pro vÃ½stup s barvou
log_info() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

log_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

log_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

log_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Funkce pro kontrolu Dockeru
check_docker() {
    log_info "Kontroluji Docker instalaci..."

    if ! command -v docker &> /dev/null; then
        log_error "Docker nenÃ­ nainstalovÃ¡n!"
        log_info "Nainstalujte Docker podle nÃ¡vodu: https://docs.docker.com/get-docker/"
        exit 1
    fi

    if ! command -v docker compose &> /dev/null; then
        log_error "Docker Compose nenÃ­ nainstalovÃ¡n!"
        exit 1
    fi

    if ! docker info &> /dev/null; then
        log_error "Docker daemon nenÃ­ spuÅ¡tÄ›n nebo uÅ¾ivatel nemÃ¡ oprÃ¡vnÄ›nÃ­!"
        log_info "SpusÅ¥te Docker daemon nebo pÅ™idejte uÅ¾ivatele do skupiny docker:"
        log_info "sudo usermod -aG docker \$USER && newgrp docker"
        exit 1
    fi

    log_success "Docker a Docker Compose jsou pÅ™ipraveny"
}

# Funkce pro vytvoÅ™enÃ­ adresÃ¡Å™ovÃ© struktury
create_directories() {
    log_info "VytvÃ¡Å™Ã­m adresÃ¡Å™ovou strukturu..."

    # HlavnÃ­ adresÃ¡Å™e pro kaÅ¾dou verzi
    for version in "9.5" "9.6" "12" "15" "16"; do
        mkdir -p "$PG_SERVERS_ROOT/versions/$version"/{data,config,logs}
        log_info "VytvoÅ™eno: versions/$version/{data,config,logs}"
    done

    # OstatnÃ­ adresÃ¡Å™e
    mkdir -p "$PG_SERVERS_ROOT/backups"
    mkdir -p "$PG_SERVERS_ROOT/wrappers"

    log_success "AdresÃ¡Å™ovÃ¡ struktura vytvoÅ™ena"
}

# Funkce pro kontrolu a vytvoÅ™enÃ­ .env souboru
setup_env_file() {
    log_info "Kontroluji .env soubor..."

    if [ ! -f "$ENV_FILE" ]; then
        log_info "VytvÃ¡Å™Ã­m .env soubor s vÃ½chozÃ­mi hesly..."
        cat > "$ENV_FILE" << EOF
# PostgreSQL hesla pro jednotlivÃ© verze
# Upravte podle potÅ™eby pro zvÃ½Å¡enÃ­ bezpeÄnosti
POSTGRES_PASSWORD_95=postgres
POSTGRES_PASSWORD_96=postgres
POSTGRES_PASSWORD_12=postgres
POSTGRES_PASSWORD_15=postgres
POSTGRES_PASSWORD_16=postgres
EOF
        log_warning "VytvoÅ™en .env soubor s vÃ½chozÃ­mi hesly. ZvaÅ¾te zmÄ›nu!"
    else
        log_success ".env soubor jiÅ¾ existuje"
    fi
}


# Funkce pro build custom PostgreSQL 9.5 image
build_custom_image() {
    log_info "Builduji custom PostgreSQL 9.5 image s Äeskou locale podporou..."

    local dockerfile="$DOCKER_DIR/Dockerfile.pg95-czech"

    if [ ! -f "$dockerfile" ]; then
        log_error "Dockerfile.pg95-czech neexistuje!"
        exit 1
    fi

    cd "$DOCKER_DIR"

    # Build custom image
    if docker build -f Dockerfile.pg95-czech -t postgres-czech:9.5 .; then
        log_success "Custom PostgreSQL 9.5 image ÃºspÄ›Å¡nÄ› sestaven"
    else
        log_error "Chyba pÅ™i buildu custom image!"
        exit 1
    fi
}

# Funkce pro spuÅ¡tÄ›nÃ­ kontejnerÅ¯
start_containers() {
    log_info "SpouÅ¡tÃ­m PostgreSQL kontejnery..."

    cd "$DOCKER_DIR"

    # Spustit vÅ¡echny kontejnery
    if docker compose up -d; then
        log_success "VÅ¡echny PostgreSQL kontejnery spuÅ¡tÄ›ny"
    else
        log_error "Chyba pÅ™i spouÅ¡tÄ›nÃ­ kontejnerÅ¯!"
        exit 1
    fi
}

# Funkce pro kontrolu stavu kontejnerÅ¯
check_containers() {
    log_info "Kontroluji stav kontejnerÅ¯..."

    cd "$DOCKER_DIR"

    # PoÄkat 10 sekund na spuÅ¡tÄ›nÃ­
    sleep 10

    # Zkontrolovat stav kontejnerÅ¯
    if docker compose ps; then
        log_success "Kontejnery bÄ›Å¾Ã­ sprÃ¡vnÄ›"
    else
        log_warning "NÄ›kterÃ© kontejnery nemusÃ­ bÄ›Å¾et sprÃ¡vnÄ›"
    fi
}

# Funkce pro vytvoÅ™enÃ­ symlinkÅ¯ pro wrappery
create_symlinks() {
    log_info "VytvÃ¡Å™Ã­m symlinky pro PostgreSQL wrappery..."

    # VytvoÅ™it symlink pro pgctl
    if [ ! -L "$HOME/scripts-ai/pgctl" ]; then
        ln -sf "$PG_SERVERS_ROOT/scripts/pgctl" "$HOME/scripts-ai/pgctl"
        log_info "VytvoÅ™en symlink: pgctl"
    fi

    # VytvoÅ™it symlinky pro wrappery
    for tool in psql pg_dump pg_restore pg_dumpall createdb dropdb createuser dropuser vacuumdb pg_isready pg_config; do
        local symlink_file="$HOME/scripts-ai/$tool"
        local wrapper_file="$PG_SERVERS_ROOT/wrappers/${tool}-wrapper"

        if [ -f "$wrapper_file" ] && [ ! -L "$symlink_file" ]; then
            ln -sf "$wrapper_file" "$symlink_file"
            log_info "VytvoÅ™en symlink: $tool"
        fi
    done

    log_success "Symlinky vytvoÅ™eny"
}

# Funkce pro zobrazenÃ­ dalÅ¡Ã­ho postupu
show_next_steps() {
    echo ""
    log_success "âœ… PostgreSQL Multi-Version Manager je pÅ™ipraven!"
    echo ""
    echo "ğŸ¯ DalÅ¡Ã­ kroky:"
    echo "   1. Nastavte aktivnÃ­ verzi: pgctl use <verze>"
    echo "   2. Zkontrolujte stav: pgctl status"
    echo "   3. PÅ™ipojte se k databÃ¡zi: psql -U postgres"
    echo ""
    echo "ğŸ“‹ DostupnÃ© verze:"
    echo "   â€¢ PostgreSQL 9.5  (port 5432) - s Äeskou locale"
    echo "   â€¢ PostgreSQL 9.6  (port 5433)"
    echo "   â€¢ PostgreSQL 12   (port 5434)"
    echo "   â€¢ PostgreSQL 15   (port 5435)"
    echo "   â€¢ PostgreSQL 16   (port 5437)"
    echo ""
    echo "ğŸ“š DalÅ¡Ã­ informace: cat $PG_SERVERS_ROOT/README.md"
}

# HlavnÃ­ ÄÃ¡st skriptu
main() {
    echo "ğŸš€ PostgreSQL Multi-Version Setup"
    echo "================================"
    echo ""

    check_docker
    create_directories
    setup_env_file
    build_custom_image
    start_containers
    check_containers
    create_symlinks
    show_next_steps
}

# SpuÅ¡tÄ›nÃ­ hlavnÃ­ funkce
main "$@"